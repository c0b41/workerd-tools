{
   "compilerOptions": {
      "module": "commonjs",
      "target": "ESNext",
      "declarationDir": "types",
      "declaration": true,
      "emitDeclarationOnly": true,
      "esModuleInterop": true,
      "paths": {
         "@utils": ["./src/lib/utils"],
         "@nodes": ["./src/lib/nodes"],
         "@types": ["./types/index"]

      }
   },
   "include": [
      "src/**/*.ts",
      "types/**/*.d.ts"
   ],
   "exclude": ["node_modules", "dist", "src/lib/config/*.ts"]
}